<%= form_for  @post do |form| %>
<div class="form-group">
  <p class="col-sm-2 col-form-label">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  </div>
  <div class="form-group">
  <p class="col-sm-2 col-form-label"> 
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>
 </div>
  
  <button type="submit" class="btn btn-success">Create Post </button>
<% end %>